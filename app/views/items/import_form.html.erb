<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          CSVインポート
        </div>
        <div class="card-body">
          <%= form_tag import_csv_items_path, multipart: true do %>
            <div class="form-group">
              <%= file_field_tag :file, class: "form-control" %>
            </div>
            <%= submit_tag "インポート", class: "btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-header">
          受注予測
        </div>
        <div class="card-body">
          <%= form_with url: forecasts_path, method: :post do %>
            <%= submit_tag "受注予測を実行", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "戻る", informations_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
