<div class="container-fluid py-3 fixed-top header" style="background-color: #223A70; color: white;">
  <div class="row">
    <div class="col-12">
      <h1 class="text-left">Order Analysis</h1>
    </div>
  </div>
</div>

<div class="container d-flex align-items-center justify-content-center mt-3" style="padding-top: 70px;">
  <div class="row justify-content-center w-100">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="text-center mb-4" style="color: #223A70;">ログイン</h2>
          <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group row mb-3">
              <%= f.label :user_code, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-9">
                <%= f.text_field :user_code, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-group row mb-3">
              <%= f.label :password, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-9 offset-sm-3">
                <%= f.submit "ログイン", class: "btn btn-primary", style: "background-color: #223A70; border-color: #223A70;" %>
              </div>
            </div>
          <% end %>
          <!-- ゲストユーザーログインボタン -->
          <div class="form-group row mb-3">
            <div class="col-sm-9 offset-sm-3">
              <%= button_to "ゲスト管理者ログイン", guest_admin_sign_in_path, method: :post, class: "btn btn-secondary mr-2" %>
              <%= button_to "ゲストユーザーログイン", guest_user_sign_in_path, method: :post, class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
