<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center">ログイン</h2>
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
        <div class="form-group row">
          <%= f.label :user_code, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :user_code, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>