<h1>ユーザー編集</h1>

<div class="card">
  <div class="card-body">
    <%= form_with(model: @user, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :user_code, "ユーザーコード" %>
        <%= form.text_field :user_code, class: "form-control" %>
      </div>

      <div class="form-group form-check">
        <%= form.check_box :admin, class: "form-check-input" %>
        <%= form.label :admin, "管理者権限", class: "form-check-label" %>
      </div>

      <%= form.submit "更新", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>