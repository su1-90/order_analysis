<div class="container-fluid vh-100 d-flex flex-column" style="padding-right: 450px;">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center mt-5">お知らせ編集</h2>

      <div id="error-message" style="display: none; color: red;">メッセージを入力してください。</div>

      <%= form_with(model: @information, local: true, id: "edit-information-form") do |f| %>
        <div class="form-group mt-4">
          <%= f.label :message, '表示したいコメントを入力してください' %>
          <%= f.text_area :message, class: 'form-control', rows: 5, id: "message-input" %>
        </div>
        <div class="text-center mt-4">
          <%= f.submit '完了', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to '戻る', informations_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const form = document.getElementById("edit-information-form");
  const messageInput = document.getElementById("message-input");
  const errorMessage = document.getElementById("error-message");

  form.addEventListener("submit", function(event) {
    if (messageInput.value.trim() === "") {
      event.preventDefault();
      errorMessage.style.display = "block";
      errorMessage.innerHTML = "メッセージを入力してください。";
    } else {
      errorMessage.style.display = "none";
    }
  });
});
</script>
