<div class="container-fluid vh-100 d-flex flex-column" style="padding-right: 450px;">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center mt-5">お知らせ編集</h2>
      <%= form_with(model: @information, local: true) do |f| %>
        <div class="form-group mt-4">
          <%= f.label :message, '表示したいコメントを入力してください' %>
          <%= f.text_area :message, class: 'form-control', rows: 5 %>
        </div>
        <div class="text-center mt-4">
          <%= f.submit '完了', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to '戻る', informations_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
