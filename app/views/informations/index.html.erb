<div class="container d-flex align-items-center justify-content-start" style="padding-top: 50px; margin-top: -50px;">
  <div class="row w-100">
    <div class="col-md-11">
      <div class="mt-4" style="border: 1px solid gray; border-radius: 10px; padding: 20px; width: 100%; height: auto;">
        <h2 class="text-left ml-3">Information</h2>
        <% if @informations.any? %>
          <ul class="list-group mt-3">
            <% @informations.each do |info| %>
              <li class="list-group-item">
                <p><%= info.message %></p>
                <% if current_user.admin? %>
                  <div class="btn-group" role="group">
                    <%= link_to '編集', edit_information_path(info), class: 'btn btn-secondary btn-sm' %>
                    <span class="px-2">|</span>
                    <%= button_to '削除', information_path(info), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-outline-danger btn-sm' %>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="mt-3 ml-3">現在お知らせはありません</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="fixed-bottom d-flex justify-content-end" style="z-index: 1050; margin-right: 20px;">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="display: none;">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>
